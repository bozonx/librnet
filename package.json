{
  "name": "k-os",
  "version": "0.0.2",
  "description": "Personal decentralised OS based on overlay network.",
  "author": "Ivan Kozyrin <ipkozyrin@gmail.com>",
  "repository": "git@github.com:bozonx/librnet.git",
  "license": "MIT",
  "private": false,
  "type": "module",
  "types": "src/index.ts",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.15.0"
  },
  "exports": {
    ".": "./src/index.ts",
    "./SquidletAppApiConnection.js": "./distr/src/uiApi/SquidletAppApiConnection.js"
  },
  "publishConfig": {
    "exports": {
      ".": "./distr/src/index.js"
    },
    "types": "distr/types/index.d.ts"
  },
  "scripts": {
    "dev": "ROOT_DIR=./_testData tsx ./src/starters/devLocal/devIndex.example.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "dev:compositor": "serve ./src/compositor",
    "format": "prettier --write --plugin=@trivago/prettier-plugin-sort-imports \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check --plugin=@trivago/prettier-plugin-sort-imports \"src/**/*.{ts,js}\""
  },
  "directories": {
    "src": "./src"
  },
  "dependencies": {
    "semver": "^7.7.2",
    "squidlet-lib": "file:../squidlet-lib",
    "ws": "^8.18.2",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.29",
    "@types/semver": "^7.7.0",
    "@types/ws": "^8.18.1",
    "jest": "^30.0.5",
    "serve": "^14.2.4",
    "ts-jest": "^29.1.2",
    "tsc": "^2.0.4",
    "typescript": "^5.8.3"
  }
}
