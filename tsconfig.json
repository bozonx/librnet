{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "rootDir": "src",
    "declarationDir": "./distr/types",
    "outDir": "./distr/src",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "src/_not_used",
    "distr",
    "__old-composition",
    "_old",
    "build",
    "_testData",
    "node_modules"
  ],
  "include": ["src/**/*"]
}
